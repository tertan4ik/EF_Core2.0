<Page x:Class="WpfApp_DataBinding_EF.Pages.AddUserToInterestGroupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp_DataBinding_EF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddUserToInterestGroupPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Button Content="Назад"
                    Width="80"
                    Margin="0,0,10,0"
                    Click="Back_Click"/>
            <TextBlock Text="Добавление пользователя в группу интересов"
                       FontSize="16"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Информация о пользователе -->
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Информация о пользователе"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="{Binding CurrentUser.Name}"
                               FontSize="14"
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Логин: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding CurrentUser.Login}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Email: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding CurrentUser.Email}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Роль: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding CurrentUser.Role.Title}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Правая часть: выбор группы -->
            <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Padding="10">
                <StackPanel>
                    <TextBlock Text="Выбор группы"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Группа:"/>
                    <ListBox ItemsSource="{Binding GroupsService.InterestGroups}"
                             SelectedItem="{Binding SelectedGroup, Mode=TwoWay}"
                             DisplayMemberPath="Title"
                             Height="120"
                             Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Дата вступления:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <DatePicker SelectedDate="{Binding JoinedAt, Mode=TwoWay}"/>
                    </StackPanel>

                    <CheckBox Content="Модератор"
                              IsChecked="{Binding IsModerator, Mode=TwoWay}"
                              Margin="0,0,0,10"/>

                    <Button Content="Записать в группу"
                            Height="30"
                            Click="Save_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
