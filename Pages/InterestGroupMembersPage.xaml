<Page x:Class="WpfApp_DataBinding_EF.Pages.InterestGroupMembersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp_DataBinding_EF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InterestGroupMembersPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Button Content="Назад"
                    Width="80"
                    Margin="0,0,10,0"
                    Click="Back_Click"/>
            <TextBlock Text="{Binding Title}"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Заголовки + кнопка + список -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- заголовки -->
                <RowDefinition Height="Auto"/>
                <!-- кнопка -->
                <RowDefinition Height="*"/>
                <!-- список -->
            </Grid.RowDefinitions>

            <!-- Заголовки колонок -->
            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,3">
                <TextBlock Text="ID" Width="60"/>
                <TextBlock Text="Имя" Width="150" Margin="10,0,0,0"/>
                <TextBlock Text="Логин" Width="120" Margin="10,0,0,0"/>
                <TextBlock Text="Email" Width="200" Margin="10,0,0,0"/>
                <TextBlock Text="Дата вступления" Width="120" Margin="10,0,0,0"/>
                <TextBlock Text="Модератор" Width="80" Margin="10,0,0,0"/>
            </StackPanel>

            <!-- Кнопка удаления -->
            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,5">
                <Button Content="Удалить из группы"
                        Width="140"
                        Click="RemoveFromGroup_Click"/>
            </StackPanel>

            <!-- Список участников -->
            <ListView Grid.Row="2"
                      ItemsSource="{Binding UserGroups}"
                      SelectedItem="{Binding SelectedUserGroup, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding User.Id}" Width="60"/>

                            <TextBlock Text="{Binding User.Name}"
                                       Width="150"
                                       Margin="10,0,0,0"/>

                            <TextBlock Text="{Binding User.Login}"
                                       Width="120"
                                       Margin="10,0,0,0"/>

                            <TextBlock Text="{Binding User.Email}"
                                       Width="200"
                                       Margin="10,0,0,0"/>

                            <TextBlock Text="{Binding JoinedAt, StringFormat=d}"
                                       Width="120"
                                       Margin="10,0,0,0"/>

                            <CheckBox IsChecked="{Binding IsModerator}"
                                      IsEnabled="False"
                                      Width="80"
                                      Margin="10,0,0,0"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Page>
